@{
    ViewData["Title"] = "Jack's Cool Website";
}
@model FormModel;
<h2>Grade Calculator (%)</h2>
<form method="post">
    <label>Assignments:</label>
    <input id="pctAssign" asp-for="assign" /> <br />
    <label>Group Project:</label>
    <input id="pctProject" asp-for="project" /> <br />
    <label>Quizzes:</label>
    <input id="pctQuiz" asp-for="quiz" /> <br />
    <label>Midterm:</label>
    <input id="pctMidterm" asp-for="midterm" /> <br />
    <label>Final:</label>
    <input id="pctFinal" asp-for="final" /> <br />
    <label>INTEX:</label>
    <input id="pctIntex" asp-for="intex" /> <br />
    <input id="btnCalc" type="submit" value="Calculate" />
    <label>Student Grade: </label>
    <span id="studCalculated"></span>
    <span id="letterCalculated"> </span>

    <div asp-validation-summary="All"></div>
</form>

<script src="~/js/JavaScript.js"></script>
